@model StaffManagementApi.ModelsDto.WorkerDto

@{
    ViewData["Title"] = "Редактирование сотрудника";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdWorker" />

                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Patronymic" class="control-label"></label>
                    <input asp-for="Patronymic" class="form-control" />
                    <span asp-validation-for="Patronymic" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BirthDate" class="control-label"></label>
                    <input asp-for="BirthDate" type="date" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdRole" class="control-label"></label>
                    <select asp-for="IdRole" asp-items="ViewBag.Roles" class="form-control">
                        <option value="">-- Выберите роль --</option>
                    </select>
                    <span asp-validation-for="IdRole" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WorkEmail" class="control-label"></label>
                    <input asp-for="WorkEmail" type="email" class="form-control" />
                    <span asp-validation-for="WorkEmail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" type="tel" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PcNumber" class="control-label"></label>
                    <input asp-for="PcNumber" class="form-control" />
                    <span asp-validation-for="PcNumber" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                    <a asp-action="Edit" class="btn btn-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 